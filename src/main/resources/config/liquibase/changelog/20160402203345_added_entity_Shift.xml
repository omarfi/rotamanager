<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Shift.
    -->
    <changeSet id="20160402203345" author="jhipster">
        <createTable tableName="shift">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="start" type="timestamp">
                <constraints nullable="false" />
            </column>
            
            <column name="end" type="timestamp">
                <constraints nullable="false" />
            </column>
            
            <column name="rota_id" type="bigint"/>
            <column name="employee_id" type="bigint"/>
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="shift" columnName="start" columnDataType="datetime"/>
        <dropDefaultValue tableName="shift" columnName="end" columnDataType="datetime"/>
        
        <addForeignKeyConstraint baseColumnNames="rota_id"
                                 baseTableName="shift"
                                 constraintName="fk_shift_rota_id"
                                 referencedColumnNames="id"
                                 referencedTableName="rota"/>

        <addForeignKeyConstraint baseColumnNames="employee_id"
                                 baseTableName="shift"
                                 constraintName="fk_shift_employee_id"
                                 referencedColumnNames="id"
                                 referencedTableName="employee"/>

    </changeSet>
</databaseChangeLog>
